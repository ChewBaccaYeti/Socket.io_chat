{
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2,
        "jsxSingleQuote": false,
        "endOfLine": "auto"
      }
    ],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off"
  }
}
